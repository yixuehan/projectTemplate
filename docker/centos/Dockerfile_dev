FROM w505703394/centos:dev_base

COPY boost_install/* /root/usr/boost

COPY mysql_install/* /root/usr/mysql

COPY json_install/* /root/usr/json

ENV CPLUS_INCLUDE_PATH=${CPLUS_INCLUDE_PATH}:/root/usr/boost/include:/root/usr/mysql/include:/root/usr/json/include \
    LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/root/usr/boost/lib:/root/usr/mysql/lib \
    LIBRARY_PATH=$LD_LIBRARY_PATH

